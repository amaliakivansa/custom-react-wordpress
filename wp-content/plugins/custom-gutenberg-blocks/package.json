{
  "name": "custom-gutenberg-blocks",
  "version": "1.0.0",
  "description": "A custom Gutenberg block with an image on the left and text on the right.",
  "main": "index.js",
  "scripts": {
    "preview": "npm-run-all --parallel sync start",
    "sync": "browser-sync start -p 'boilerplate-2024.local' --files '**/*.php' 'build/*.js' 'build/*.css' 'src/*.scss'",
    "build": "wp-scripts build src/index.js src/frontend.js",
    "start": "wp-scripts start src/index.js src/frontend.js",
    "watch": "wp-scripts start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "wordpress",
    "gutenberg",
    "block",
    "custom",
    "editor"
  ],
  "author": "Amalia",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/custom-gutenberg-blocks.git"
  },
  "devDependencies": {
    "@wordpress/scripts": "^27.9.0",
    "browser-sync": "^3.0.2",
    "npm-run-all": "^4.1.5"
  }
}
